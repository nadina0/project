<?xml version="1.0" encoding="utf-8"?>
<domain name="CookingAppDomain" is_super_domain="true">
  <goal type="perform" action="top">
    <plan>
      <forget_all/>
      <findout type="goal"/>
    </plan>
  </goal>



  <goal type="perform" action="make_omelette">
    <plan>
      <assume_shared>
        <proposition predicate="current_recipe" value="omelette_recipe"/>
      </assume_shared>
      <get_done action="whisk_eggs"/>
      <get_done action="heat_butter"/>
      <get_done action="stir_eggs"/>
      <get_done action="fold"/>
      <get_done action="transfer_plate"/>
      <inform>
        <proposition predicate="done_cooking" value="finished_omelette"/>
      </inform>
      <signal_action_completion/>
    </plan>
  </goal>

  <goal type="perform" action="make_salad">
    <plan>
      <assume_shared>
        <proposition predicate="current_recipe" value="salad_recipe"/>
      </assume_shared>
      <get_done action="cut_vegetables"/>
      <get_done action="put_bowl"/>
      <get_done action="add_seasoning"/>
      <get_done action="mix_everything"/>
       <inform>
        <proposition predicate="done_cooking" value="finished_salad"/>
      </inform>
      <signal_action_completion/>
    </plan>
  </goal>


  <goal type="resolve" question_type="wh_question" predicate="what_vegetables">
    <plan>
      <findout type="wh_question" predicate="current_recipe"/>
      <if>
        <is_private_belief_or_shared_commitment predicate="current_recipe" value="salad_recipe"/>
        <then>
          <inform>
            <proposition predicate="what_vegetables" value="vegetables_answer"/>
          </inform>
        </then>
      </if>
    </plan>
  </goal>


  <goal type="resolve" question_type="wh_question" predicate="stir_time">
    <plan>
      <findout type="wh_question" predicate="current_recipe"/>
      <if>
        <is_private_belief_or_shared_commitment predicate="current_recipe" value="omelette_recipe"/>
        <then>
          <inform>
            <proposition predicate="stir_time" value="stir_answer"/>
          </inform>
        </then>
      </if>
    </plan>
  </goal>


  <goal type="perform" action="whisk_eggs">
    <plan>
      <get_done action="whisk_explain"/>
      <signal_action_completion/>
    </plan>
  </goal>

  <goal type="perform" action="mix_everything">
    <plan>
      <get_done action="mix_explain"/>
      <signal_action_completion/>
    </plan>
  </goal>


  
  
  
</domain>
