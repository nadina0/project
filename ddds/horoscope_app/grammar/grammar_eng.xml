<?xml version="1.0" encoding="utf-8"?>
<grammar>

<!-- menu items-->

  <action name="top">
    <one-of>
      <item>main menu</item>
      <item>top</item>
      <item>beginning</item>
      <item>cancel</item>
      <item>forget it</item>
      <item>never mind</item>
      <item>abort</item>
    </one-of>
  </action>

  <action name="up">
    <one-of>
      <item>up</item>
      <item>back</item>
      <item>go back</item>
    </one-of>
  </action>

<!-- question and answers -->

  <question speaker="user" predicate="horoscope" type="alt_question">
    <one-of>
      <item>I would like you to tell me the horoscope</item>
      <item>tell me my horoscope</item>
    </one-of>
  </question>

  <question speaker="user" predicate="tarot" type="alt_question">
    <one-of>
      <item>Tell me about a tarot card</item>
    </one-of>
  </question>


  <answer speaker="user">
    <one-of>
      <item><slot predicate="sign_search"/></item>
      <item><slot predicate="day_search"/> </item>
    </one-of>
  </answer>


  <individual name="libra">
    <one-of>
      <item>libra</item>
    </one-of>
  </individual>


<!-- individual days-->

  <individual name="today">
    <one-of>
      <item>today</item>
    </one-of>
  </individual>

  <individual name="emperor">
    <one-of>
      <item>The Emperor</item>
    </one-of>
  </individual>

  <individual name="tomorrow">
    <one-of>
      <item>tomorrow</item>
    </one-of>
  </individual>

  <individual name="yesterday">
    <one-of>
      <item>yesterday</item>
    </one-of>
  </individual>

  <question speaker="system" predicate="sign_search" type="wh_question">
    What sign
  </question>

  <question speaker="system" predicate="day_search" type="wh_question">
    What day
  </question>

  <question speaker="system" predicate="card_search" type="wh_question">
    What card
  </question>

  <answer speaker="system" predicate="horoscope">Your prognosis is <slot predicate="horoscope"/> </answer>

  <answer speaker="system" predicate="tarot">Your card means <slot predicate="tarot"/> </answer>

</grammar>
