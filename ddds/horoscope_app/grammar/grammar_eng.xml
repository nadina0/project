<?xml version="1.0" encoding="utf-8"?>
<grammar>

<!-- menu items-->

  <action name="top">
    <one-of>
      <item>main menu</item>
      <item>top</item>
      <item>beginning</item>
      <item>cancel</item>
      <item>forget it</item>
      <item>never mind</item>
      <item>abort</item>
    </one-of>
  </action>

  <action name="up">
    <one-of>
      <item>up</item>
      <item>back</item>
      <item>go back</item>
    </one-of>
  </action>

  <action name="tarot_reading">
    <one-of>
      <item>tarot card</item>
      <item>tarot card reading</item>
      <item>i want to do a tarot card reading</item>
      <item>reading a card</item>
    </one-of>
  </action>

  <action name="do_one_card_spread">
    <one-of>
      <item>one card spread</item>
      <item>only one card spread</item>
    </one-of>
  </action>

  <action name="do_love_cross_formation">
    <one-of>
      <item>love cross formation</item>
      <item>love cross</item>
    </one-of>
  </action>

  <action name="do_past_present_future">
   <one-of>
      <item>past present future</item>
      <item>ppf</item>
    </one-of>
  </action>

  <action name="do_mental_healing_spread">
   <one-of>
      <item>mental healing</item>
      <item>mental healing spread</item>
    </one-of>
  </action>


<!-- menu question from system -->

<question speaker="all" predicate="horoscope">
    about a horoscope
</question>

<question speaker="all" predicate="tarot_reading_pred">
  about tarot reading
</question>

<question speaker="all" predicate="tarot_card_question">
  about a card
</question>

<!-- tarot card reading menu -->

 <!--<question speaker="system" predicate="card_reading_type" type="wh_question">
